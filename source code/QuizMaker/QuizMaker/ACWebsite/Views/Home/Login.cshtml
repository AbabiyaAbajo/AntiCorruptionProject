@model ACWebsite.Models.User
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2><br /><br />

<form asp-controller="home" asp-action="LoginAndRedirect">
    <div class="form-group">
        <label for="EmailAddress">Email Address</label>
        <input id="EmailAddress" name="email" type="email" class="form-control" asp-for="email" required />
    </div>
    <div class="form-group">
        <label for="Password">Password</label>
        <input id="Password" name="password" type="password" class="form-control" asp-for="password" required />
    </div>

    <button type="submit" class="btn btn-default" value="">Login Now</button>
</form>